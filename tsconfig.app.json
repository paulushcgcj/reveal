{
  "extends": "./tsconfig.base.json",
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx"],
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "ignoreDeprecations": "5.0"
  }
}
